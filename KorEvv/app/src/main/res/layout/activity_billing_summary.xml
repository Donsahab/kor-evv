<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ccc"
    tools:context=".activity.BillingSummaryActivity">
    <RelativeLayout
        android:id="@+id/rl2"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_back"
            android:layout_width="@dimen/space_30"
            android:layout_height="@dimen/space_30"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/space_10"
            android:src="@drawable/back_arrow"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            style="@style/largetextstyle"
            android:text=""
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />



    </RelativeLayout>
    <ScrollView
        android:layout_margin="@dimen/space_5"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        >

        <LinearLayout
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20">

            <TextView
                android:id="@+id/date_title"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="@dimen/space_120"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textColor="@color/colorPrimary"
                style="@style/modelbodytextstyle"
                />

            <TextView
                android:layout_gravity="end|center_vertical"
                android:gravity="end|center_vertical"
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_shade"
                style="@style/modelbodytextstyle"
                />

        </LinearLayout>
        <LinearLayout
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20">

            <TextView
                android:id="@+id/start_time_title"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="@dimen/space_120"
                android:layout_height="wrap_content"
                android:text="Start Time: "
                android:textColor="@color/colorPrimary"
                style="@style/modelbodytextstyle"
               />

            <TextView
                android:layout_gravity="end|center_vertical"
                android:gravity="end|center_vertical"
                android:id="@+id/tv_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_shade"
                style="@style/modelbodytextstyle"
                android:layout_marginLeft="@dimen/space_10"
              />

        </LinearLayout>


        <LinearLayout
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20">

            <TextView
                android:id="@+id/end_time_title"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="@dimen/space_120"
                android:layout_height="wrap_content"
                android:text="End Time: "
                android:textColor="@color/colorPrimary"
                style="@style/modelbodytextstyle"
              />

            <TextView
                android:layout_gravity="end|center_vertical"
                android:gravity="end|center_vertical"
                android:id="@+id/tv_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_shade"
                style="@style/modelbodytextstyle"
                android:layout_marginLeft="@dimen/space_10"
                />

        </LinearLayout>


        <LinearLayout

            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20">

            <TextView
                android:id="@+id/total_time_title"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="@dimen/space_120"
                android:layout_height="wrap_content"
                android:text="Total Time: "
                android:textColor="@color/colorPrimary"
                style="@style/modelbodytextstyle"
                />

            <TextView
                android:layout_gravity="end|center_vertical"
                android:gravity="end|center_vertical"
                android:id="@+id/total_time_lebel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_shade"
                style="@style/modelbodytextstyle"
                android:layout_marginLeft="@dimen/space_10"
                />

        </LinearLayout>
        <LinearLayout

            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20">

            <TextView
                android:id="@+id/respite_time_title"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Time: "
                android:textColor="@color/colorPrimary"
                style="@style/modelbodytextstyle"
                />

            <TextView
                android:layout_gravity="end|center_vertical"
                android:gravity="end|center_vertical"
                android:id="@+id/tv_respite_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_shade"
                style="@style/modelbodytextstyle"
                android:layout_marginLeft="@dimen/space_10"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20">

            <TextView
                android:id="@+id/total_unit_title"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="@dimen/space_120"
                android:layout_height="wrap_content"
                android:text="Total Unit: "
                android:textColor="@color/colorPrimary"
                style="@style/modelbodytextstyle"
               />

            <TextView
                android:layout_marginLeft="@dimen/space_10"
                android:layout_gravity="end|center_vertical"
                android:gravity="end|center_vertical"
                android:id="@+id/tv_total_unit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                android:textColor="@color/black_shade"
                style="@style/modelbodytextstyle"
                />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20">

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billing Amount @ $10/unit "
                android:textColor="@color/colorPrimary"
                style="@style/largetextstyle"
                android:textStyle="bold"
                android:layout_weight=".6"/>



        </LinearLayout>

        <View
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height=".5sp"
            android:visibility="gone"
            android:background="#ccc"/>


        <LinearLayout
            android:visibility="gone"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20">

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="@dimen/space_120"
                android:layout_height="wrap_content"
                android:text="Billing Amount: "
                android:textColor="@color/colorPrimary"
                style="@style/modelbodytextstyle"
               />

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:id="@+id/tv_billing_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$120/- "
                android:textColor="@color/black_shade"
                style="@style/modelbodytextstyle"
                android:layout_marginLeft="@dimen/space_10"
                />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20">

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Total "
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                style="@style/largetextstyle"
                android:layout_weight=".6"/>



        </LinearLayout>
        <View
            android:visibility="gone"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:layout_width="match_parent"
            android:layout_height=".5sp"
            android:background="#ccc"/>

        <LinearLayout
            android:visibility="gone"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20">

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="@dimen/space_120"
                android:layout_height="wrap_content"
                android:text="Hours: "
                android:textColor="@color/colorPrimary"
                style="@style/modelbodytextstyle"
               />

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:id="@+id/tv_monthly_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 Hrs "
                android:layout_marginLeft="@dimen/space_10"
                android:textColor="@color/black_shade"
                style="@style/modelbodytextstyle"
                />

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:weightSum="2"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20">

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="@dimen/space_120"
                android:layout_height="wrap_content"
                android:text="Amount: "
                android:textColor="@color/colorPrimary"
                style="@style/modelbodytextstyle"
             />

            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:id="@+id/tv_monthly_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$180/- "
                android:textColor="@color/black_shade"
                android:layout_marginLeft="@dimen/space_10"
                style="@style/modelbodytextstyle"
                />

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_margin="@dimen/space_5"
        android:layout_width="match_parent"
        android:elevation="@dimen/space_5"
        android:id="@+id/sign_button"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/button_bachground_red"
        android:layout_height="@dimen/space_50">


        <TextView
            android:id="@+id/close_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Close"
            style="@style/normalbodytextstyle"

            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>