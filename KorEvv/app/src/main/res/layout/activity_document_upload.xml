<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DocumentUploadActivity">
    <Button
        android:id="@+id/next_button"
        style="@style/my_button_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Next"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cardView" />

    <TextView
        android:id="@+id/preview"
        style="@style/my_txt_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:text="Capture"
        app:layout_constraintBottom_toBottomOf="@+id/take_picture_from_camera_lebel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/take_picture_from_camera_lebel" />

    <TextView
        android:id="@+id/select_picture"
        style="@style/my_txt_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="16dp"
        android:text="Browse"
        app:layout_constraintBottom_toBottomOf="@+id/document_upload_lebel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/document_upload_lebel" />

    <TextView
        android:id="@+id/document_upload_lebel"
        style="@style/normalbodytextstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="Select from gallary"
        app:layout_constraintEnd_toStartOf="@+id/select_picture"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:id="@+id/take_picture_from_camera_lebel"
        style="@style/normalbodytextstyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:text="Take picture from camera"
        app:layout_constraintEnd_toStartOf="@+id/preview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/pdf_name"
        style="@style/largetextstyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="637dp" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/select_picture"
        app:layout_constraintStart_toStartOf="@+id/document_upload_lebel"
        app:layout_constraintTop_toBottomOf="@+id/document_upload_lebel" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="@+id/preview"
        app:layout_constraintStart_toStartOf="@+id/take_picture_from_camera_lebel"
        app:layout_constraintTop_toBottomOf="@+id/take_picture_from_camera_lebel" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="@dimen/space_10"
        app:layout_constraintEnd_toEndOf="@+id/doc_card"
        app:layout_constraintStart_toStartOf="@+id/doc_card"
        app:layout_constraintTop_toBottomOf="@+id/doc_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:layout_marginTop="@dimen/space_4"
                    android:src="@drawable/tip_icon" />

                <TextView
                    android:id="@+id/file_support_lebel"
                    style="@style/normalbodytextstyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/space_10"
                    android:text="File Support(.jpeg, .png, .jpg, .doc, .pdf)"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10">

                <ImageView
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:layout_marginTop="@dimen/space_4"
                    android:src="@drawable/tip_icon" />

                <TextView
                    android:id="@+id/only_one_file_lebel"
                    style="@style/normalbodytextstyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/space_10"
                    android:text="One image per document"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/doc_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/take_picture_from_camera_lebel"
        app:layout_constraintTop_toBottomOf="@+id/view2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/selected_image"
                android:layout_width="@dimen/space_100"
                android:layout_height="@dimen/space_100"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/space_10"
                android:padding="@dimen/space_10"
                android:scaleType="centerInside"
                android:src="@drawable/camera_capture_icon" />

            <ImageView
                android:id="@+id/cross_icon"
                android:layout_width="@dimen/space_60"
                android:layout_height="@dimen/space_60"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/space_10"
                android:src="@drawable/delete_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_4"
                android:layout_below="@+id/selected_image"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/colorPrimary" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_take_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="take_picture_from_camera_lebel,preview,view2"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_select_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="document_upload_lebel,select_picture,view"/>

</androidx.constraintlayout.widget.ConstraintLayout>