<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SettingsFragment"
    android:background="#ccc">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_300"
        app:cardCornerRadius="@dimen/space_3"
        android:layout_margin="@dimen/space_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/password_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:background="@drawable/edit_text_job"
                android:layout_marginTop="90sp"
                android:layout_marginLeft="@dimen/space_25"
                android:layout_marginRight="@dimen/space_25"
                android:elevation="@dimen/space_5"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/space_25"
                    android:layout_height="@dimen/space_25"
                    android:src="@drawable/padlock"/>
                <TextView
                    android:id="@+id/pass_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/modelbodytextstyle"

                    android:text="@string/change_password"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/space_10"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lang_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50"
                android:background="@drawable/edit_text_job"
                android:layout_marginTop="@dimen/space_20"
                android:layout_marginLeft="@dimen/space_25"
                android:layout_marginRight="@dimen/space_25"
                android:elevation="@dimen/space_5"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/space_25"
                    android:layout_height="@dimen/space_25"
                    android:src="@drawable/translation"/>
                <TextView
                    android:id="@+id/lang_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/modelbodytextstyle"

                    android:text="Chnage Language"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/space_10"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    

</LinearLayout>