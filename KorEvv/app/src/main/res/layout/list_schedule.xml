<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/space_5"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_5"
        android:layout_marginTop="5dp"
        android:layout_marginRight="@dimen/space_5"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/space_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/space_5"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/space80"
                    android:layout_height="@dimen/space80"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_marginEnd="@dimen/space_10"
                    android:src="@drawable/user" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/exp_title"
                                android:layout_width="@dimen/space_16"
                                android:layout_height="@dimen/space_16"
                                android:layout_marginTop="@dimen/space_8"
                                android:src="@drawable/timeicon" />

                            <TextView
                                android:id="@+id/date_Tv"
                                style="@style/modelbodytextstylebold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/space_10"
                                android:layout_toRightOf="@+id/exp_title"
                                android:text="4:00 PM, 12th JAN @016"
                                android:textColor="@color/dark_black" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/space_5">

                        <ImageView
                            android:layout_width="@dimen/space_16"
                            android:layout_height="@dimen/space_16"
                            android:layout_gravity="top"
                            android:layout_marginTop="@dimen/space_8"
                            android:src="@drawable/user_icon" />

                        <TextView
                            android:id="@+id/name_tv"
                            style="@style/modelbodytextstyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/space_10"
                            android:layout_weight="1"
                            android:textColor="#313030" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_5">

                        <ImageView
                            android:id="@+id/location_icon"
                            android:layout_width="@dimen/space_16"
                            android:layout_height="@dimen/space_16"
                            android:layout_marginTop="@dimen/space_8"
                            android:src="@drawable/location_black_icon" />

                        <TextView
                            android:id="@+id/location"
                            style="@style/modelbodytextstyle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10"
                            android:layout_weight="1"
                            android:maxLength="100"
                            android:textColor="@android:color/black"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="#ccc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginBottom="@dimen/space_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/status"
                    style="@style/tinytextstyle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/space_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/space_10"
                    android:background="@drawable/button_touch_green"
                    android:gravity="center"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingRight="@dimen/space_8"
                    android:text="PERSONAL"
                    android:textColor="@color/white"
                    android:visibility="gone"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="@dimen/space_10"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/view_deatils_button"
                        style="@style/my_txt_viewdetail_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="@dimen/space_35"
                        android:paddingRight="@dimen/space_35"
                        android:paddingTop="@dimen/space_16"
                        android:paddingBottom="@dimen/space_16"
                        android:text="View Details" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/call_icon"
                    android:layout_width="@dimen/space_25"
                    android:layout_height="@dimen/space_25"
                    android:visibility="gone"
                    android:src="@drawable/cellicon" />

                <ImageView
                    android:id="@+id/map_icon"
                    android:layout_width="@dimen/space_25"
                    android:layout_height="@dimen/space_25"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:visibility="gone"
                    android:src="@drawable/mapicon" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_margin="@dimen/space_10">

        <Button
            android:id="@+id/previousbutton"
            style="@style/my_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
           />

        <Button
            android:layout_marginTop="@dimen/space_10"
            android:id="@+id/nextbutton"
            style="@style/my_button_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           />
    </LinearLayout>

</LinearLayout>