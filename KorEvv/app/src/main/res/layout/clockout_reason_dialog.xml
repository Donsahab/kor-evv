<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <Button
        android:id="@+id/buttoncheckout_continue"
        style="@style/my_button_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/checkout_cancel_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/checkout_cancel_button"
        app:layout_constraintTop_toTopOf="@+id/checkout_cancel_button"
        />

    <Button
        android:id="@+id/checkout_cancel_button"
        style="@style/my_button_style_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttoncheckout_continue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_clockout_reason" />

    <EditText
        android:id="@+id/et_clockout_reason"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/popup_edit_text_background"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:lines="5"
        android:padding="@dimen/space_5"
        android:scrollHorizontally="false"
        app:layout_constraintEnd_toEndOf="@+id/enter_checkoutmessage_lebel"
        app:layout_constraintStart_toStartOf="@+id/enter_clockout_reason_lebel"
        app:layout_constraintTop_toBottomOf="@+id/enter_clockout_reason_lebel" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/space_40"
        android:layout_height="@dimen/space_40"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/korevv" />

    <TextView
        android:id="@+id/enter_checkoutmessage_lebel"
        style="@style/normalbodytextstyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/confirm_clockout_lebel"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/confirm_clockout_lebel"
        style="@style/modelbodytextstylebold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/enter_clockout_reason_lebel"
        style="@style/normalbodytextstyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/enter_checkoutmessage_lebel"
        app:layout_constraintTop_toBottomOf="@+id/enter_checkoutmessage_lebel" />

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/enter_clockout_reason_lebel"
        app:layout_constraintStart_toEndOf="@+id/enter_clockout_reason_lebel"
        app:layout_constraintTop_toTopOf="@+id/enter_clockout_reason_lebel"
        app:srcCompat="@drawable/asterisk_symbol_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>